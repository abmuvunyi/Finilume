<p><%= t('devise.mailer.email_changed.hello', default: 'Hello') %> <%= @email %>!</p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t('devise.mailer.email_changed.notify_change_pending', default: "We're contacting you to notify you that your email is being changed to %{new_email}.", new_email: @resource.unconfirmed_email) %></p>
<% else %>
  <p><%= t('devise.mailer.email_changed.notify_changed', default: "We're contacting you to notify you that your email has been changed to %{new_email}.", new_email: @resource.email) %></p>
<% end %>
