<h1 class="text-center"><%= t('.title') %></h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, t('.email_label'), class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, placeholder: t('.email_label'), class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :password, t('.password_label'), class: 'form-label' %>
    <%= f.password_field :password, autocomplete: "off", placeholder: t('.password_label'), class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check mb-3">
      <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
      <%= f.label :remember_me, t('.remember_me'), class: "form-check-label" %>
    </div>
  <% end %>

  <div class="mb-3 d-grid">
    <%= f.submit t('.submit'), class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<div class="text-center">
  <%= link_to t('.sign_up'), new_registration_path(resource_name) %> Â·
  <%= link_to t('.forgot_password'), new_password_path(resource_name) %>
</div>
