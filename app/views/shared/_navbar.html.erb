<% if current_user && defined?(true_user) && current_user != true_user %>
  <div class="alert alert-warning text-center">
    You're logged in as <b><%= current_user.name %> (<%= current_user.email %>)</b>
    <%= link_to stop_impersonating_madmin_impersonates_path, method: :post do %><%= icon("fas", "times") %> Logout <% end %>
  </div>
<% end %>

<nav class="navbar navbar-expand-md navbar-light bg-light">
  <div class="container mx-auto">
    <%= link_to Rails.configuration.application_name, root_path, class: "navbar-brand" %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarMain">
      <ul class="navbar-nav me-auto mt-2 mt-md-0">
      </ul>

      <ul class="navbar-nav">

<ul class="navbar-nav">
  <% if user_signed_in? || fsp_user_signed_in? %>

    <li class="nav-item">
      <%= link_to notifications_path, class: "nav-link" do %>
        <span><i class="far fa-bell" aria-hidden="true"></i></span>
      <% end %>
    </li>

    <li class="nav-item dropdown">
      <%= link_to "#", id: "navbar-dropdown", class: "nav-link dropdown-toggle", data: { target: "nav-account-dropdown", bs_toggle: "dropdown" }, aria: { haspopup: true, expanded: false } do %>
        <% if user_signed_in? %>
          <%= image_tag avatar_path(current_user, size: 40), height: 20, width: 20, class: "rounded" %>
        <% elsif fsp_user_signed_in? %>
          <%= image_tag avatar_path(current_fsp_user, size: 40), height: 20, width: 20, class: "rounded" %>
        <% end %>
      <% end %>
      
      <div id="nav-account-dropdown" class="dropdown-menu dropdown-menu-end" aria-labelledby="navbar-dropdown">
        <% if user_signed_in? %>
          <%= link_to "Settings", edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Dashboard", authenticated_root_path, class: "dropdown-item" %>
          <%= link_to "Products", products_path, class: "dropdown-item" %>
          <%= link_to "Sales", sales_path, class: "dropdown-item" %>
          <%= link_to "Income", incomes_path, class: "dropdown-item" %>
          <%= link_to "Expenses", expenses_path, class: "dropdown-item" %>

          <% if current_user.admin? && respond_to?(:madmin_root_path) %>
            <div class="dropdown-divider"></div>
            <%= link_to "Admin Area", madmin_root_path, class: "dropdown-item" %>
            <%= link_to "Data Access Requests", admin_data_access_requests_path, class: "dropdown-item" %>
          <% end %>

        <% elsif fsp_user_signed_in? %>
          <%= link_to "FSP Dashboard", authenticated_fsp_root_path, class: "dropdown-item" %>

        <% end %>

        <div class="dropdown-divider"></div>
        <%= button_to "Logout", (fsp_user_signed_in? ? destroy_fsp_user_session_path : destroy_user_session_path), method: :delete, class: "dropdown-item" %>
      </div>
    </li>

  <% else %>
    <li class="nav-item"><%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %></li>
    <li class="nav-item"><%= link_to "Login", new_user_session_path, class: "nav-link" %></li>
  <% end %>
</ul>


      
    </div>
  </div>
</nav>