<footer class="bg-dark text-white footer mt-auto py-3">
  <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
    <span>&copy; <%= Date.today.year %> <%= t('shared.footer.company_name') %></span>
    <ul class="list-inline mb-0">
      <li class="list-inline-item me-3">
        <%= link_to t('shared.footer.terms'), terms_path, class: "text-decoration-none text-white" %>
      </li>
      <li class="list-inline-item me-3">
        <%= link_to t('shared.footer.privacy'), privacy_path, class: "text-decoration-none text-white" %>
      </li>
      <li class="list-inline-item me-3">
        <%= link_to t('shared.feedback.link', default: "Send Feedback"), new_feedback_path, class: "text-decoration-none text-white" %>
      </li>
      <li class="list-inline-item">
        <a href="https://facebook.com" target="_blank" class="text-decoration-none text-white" aria-label="<%= t('shared.footer.facebook') %>">
          <i class="fab fa-facebook-f"></i>
        </a>
      </li>
      <li class="list-inline-item">
        <a href="https://twitter.com" target="_blank" class="text-decoration-none text-white" aria-label="<%= t('shared.footer.twitter') %>">
          <i class="fab fa-twitter"></i>
        </a>
      </li>
    </ul>
  </div>
</footer>
