<% bootstrap_class_for = ->(type) do
  case type.to_s
  when 'notice', 'success' then 'alert-success'
  when 'alert',  'error'   then 'alert-danger'
  else                      'alert-info'
  end
end %>

<% flash.each do |type, message| %>
  <% next if message.blank? %>
  <div class="container mt-4">
    <div class="alert <%= bootstrap_class_for.call(type) %> alert-dismissible fade show" role="alert">
      <i class="fas fa-info-circle me-2" aria-hidden="true"></i>
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="<%= t('shared.notices.close') %>"></button>
    </div>
  </div>
<% end %>
