<p><%= t('fsp_devise.mailer.email_changed.greeting', email: @email) %></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t('fsp_devise.mailer.email_changed.notify_unconfirmed',
           unconfirmed_email: @resource.unconfirmed_email) %></p>
<% else %>
  <p><%= t('fsp_devise.mailer.email_changed.notify_changed', email: @resource.email) %></p>
<% end %>

