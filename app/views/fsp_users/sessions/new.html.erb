<div class="row">
  <div class="col-lg-4 offset-lg-4">
    <h1 class="text-center"><%= t('fsp_devise.sessions.new.title') %></h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.email_field :email,
              autofocus: true,
              placeholder: t('fsp_devise.sessions.new.email_placeholder'),
              class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password,
              autocomplete: "off",
              placeholder: t('fsp_devise.sessions.new.password_placeholder'),
              class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <label class="form-check-label">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= t('fsp_devise.sessions.new.remember_me') %>
          </label>
        </div>
      <% end %>

      <div class="mb-3 d-grid">
        <%= f.submit t('fsp_devise.sessions.new.submit'), class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "fsp_users/shared/links" %>
    </div>
  </div>
</div>
