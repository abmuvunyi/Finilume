<div class="row">
  <div class="col-lg-4 offset-lg-4">
    <h1 class="text-center"><%= t('fsp_devise.registrations.new.title') %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "fsp_users/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.email_field :email,
              autofocus: false,
              class: 'form-control',
              placeholder: t('fsp_devise.registrations.new.email_placeholder') %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password,
              autocomplete: "off",
              class: 'form-control',
              placeholder: t('fsp_devise.registrations.new.password_placeholder') %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password_confirmation,
              autocomplete: "off",
              class: 'form-control',
              placeholder: t('fsp_devise.registrations.new.password_confirmation_placeholder') %>
      </div>

      <div class="mb-3 d-grid">
        <%= f.submit t('fsp_devise.registrations.new.submit'),
                     class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "fsp_users/shared/links" %>
    </div>
  </div>
</div>
