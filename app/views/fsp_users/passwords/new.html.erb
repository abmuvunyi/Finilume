<h2><%= t('fsp_devise.passwords.new.title') %></h2>

<%= form_for(resource,
             as: resource_name,
             url: password_path(resource_name),
             html: { method: :post }) do |f| %>

  <%= render "fsp_users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, t('fsp_devise.passwords.new.email_label') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit t('fsp_devise.passwords.new.submit') %>
  </div>
<% end %>

<%= render "fsp_users/shared/links" %>
