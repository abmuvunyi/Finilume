<h1><%= t('admin.data_access_requests.index.title') %></h1>

<% if @requests.present? %>
  <table class="table">
    <thead>
      <tr>
        <th><%= t('admin.data_access_requests.index.requester') %></th>
        <th><%= t('admin.data_access_requests.index.user') %></th>
        <th><%= t('admin.data_access_requests.index.status') %></th>
        <th><%= t('admin.data_access_requests.index.actions') %></th>
      </tr>
    </thead>
    <tbody>
      <% @requests.each do |r| %>
        <tr id="<%= dom_id(r) %>">
          <td><%= r.fsp_user&.email || '—' %></td>
          <td><%= r.user&.email || '—' %></td>
          <td><%= r.status %></td>
          <td class="d-flex gap-2">
            <%= button_to t('admin.data_access_requests.index.approve'),
                          admin_data_access_request_path(r, status: 'approved'),
                          method: :patch,
                          class: "btn btn-sm btn-success" %>

            <%= button_to t('admin.data_access_requests.index.reject'),
                          admin_data_access_request_path(r, status: 'rejected'),
                          method: :patch,
                          data: { turbo_confirm: t('are_you_sure') },
                          class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-muted"><%= t('admin.data_access_requests.index.empty') %></p>
<% end %>
