<div class="page-header">
  <%= link_to products_path, class: 'btn btn-default' do %>
    All Products
  <% end %>
  <%= link_to edit_product_path(@product), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show product</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @product.name %></dd>
  <dt>Category:</dt>
  <dd><%= @product.category %></dd>
  <dt>Price:</dt>
  <dd><%= number_to_currency(@product.price, unit: "RWF ", precision: 0) %></dd>
  <dt>Quantity:</dt>
  <dd><%= @product.quantity %></dd>
  <dt>User:</dt>
  <dd><%= @product.user.name %></dd>
</dl>
