<!-- Hero Section -->
<div class="container-fluid hero-section text-white text-center py-5"
     style="background: url('') no-repeat center center; background-size: cover; padding-left: 20%; padding-right: 20%;">
  <div class="container">
    <h1 class="display-3 mb-4" style="color: #DAA520; font-weight: bold;">
      <%= t('home.index.hero.title') %>
    </h1>
    <p class="lead mb-4" style="font-size: 1.5rem;">
      <%= t('home.index.hero.subtitle') %>
    </p>
    <%= link_to t('home.index.hero.cta'),
                new_user_registration_path,
                class: "btn btn-warning btn-lg px-5 py-3" %>
  </div>
</div>

<!-- Features Section -->
<div class="container features-section mt-5">
  <div class="text-center mb-5">
    <h2><%= t('home.index.features.title') %></h2>
    <p class="text-muted"><%= t('home.index.features.subtitle') %></p>
  </div>

  <div class="row text-center">
    <div class="col-md-4 mb-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <i class="fas fa-wallet fa-3x text-primary mb-3" aria-hidden="true"></i>
          <h5 class="card-title"><%= t('home.index.features.cards.manage.title') %></h5>
          <p class="card-text text-muted"><%= t('home.index.features.cards.manage.body') %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <i class="fas fa-chart-pie fa-3x text-success mb-3" aria-hidden="true"></i>
          <h5 class="card-title"><%= t('home.index.features.cards.insights.title') %></h5>
          <p class="card-text text-muted"><%= t('home.index.features.cards.insights.body') %></p>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <i class="fas fa-university fa-3x text-danger mb-3" aria-hidden="true"></i>
          <h5 class="card-title"><%= t('home.index.features.cards.services.title') %></h5>
          <p class="card-text text-muted"><%= t('home.index.features.cards.services.body') %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- How It Works Section -->
<div class="container-fluid how-it-works-section bg-light py-5 mt-5">
  <div class="container">
    <div class="text-center mb-5">
      <h2><%= t('home.index.how_it_works.title') %></h2>
      <p class="text-muted"><%= t('home.index.how_it_works.subtitle') %></p>
    </div>

    <div class="row">
      <div class="col-md-4 text-center">
        <div class="card border-0 h-100">
          <div class="card-body">
            <i class="fas fa-user-plus fa-3x text-info mb-3" aria-hidden="true"></i>
            <h5 class="card-title"><%= t('home.index.how_it_works.steps.step1.title') %></h5>
            <p><%= t('home.index.how_it_works.steps.step1.body') %></p>
          </div>
        </div>
      </div>

      <div class="col-md-4 text-center">
        <div class="card border-0 h-100">
          <div class="card-body">
            <i class="fas fa-edit fa-3x text-warning mb-3" aria-hidden="true"></i>
            <h5 class="card-title"><%= t('home.index.how_it_works.steps.step2.title') %></h5>
            <p><%= t('home.index.how_it_works.steps.step2.body') %></p>
          </div>
        </div>
      </div>

      <div class="col-md-4 text-center">
        <div class="card border-0 h-100">
          <div class="card-body">
            <i class="fas fa-chart-line fa-3x text-success mb-3" aria-hidden="true"></i>
            <h5 class="card-title"><%= t('home.index.how_it_works.steps.step3.title') %></h5>
            <p><%= t('home.index.how_it_works.steps.step3.body') %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Testimonials Section -->
<div class="container testimonials-section py-5 mt-5">
  <div class="text-center mb-5">
    <h2><%= t('home.index.testimonials.title') %></h2>
    <p class="text-muted"><%= t('home.index.testimonials.subtitle') %></p>
  </div>

  <div class="row">
    <div class="col-md-6 mb-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body text-center">
          <blockquote class="blockquote">
            <p>“<%= t('home.index.testimonials.items.john.quote') %>”</p>
            <footer class="blockquote-footer"><%= t('home.index.testimonials.items.john.author') %></footer>
          </blockquote>
        </div>
      </div>
    </div>

    <div class="col-md-6 mb-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body text-center">
          <blockquote class="blockquote">
            <p>“<%= t('home.index.testimonials.items.jane.quote') %>”</p>
            <footer class="blockquote-footer"><%= t('home.index.testimonials.items.jane.author') %></footer>
          </blockquote>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Call to Action Section -->
<div class="container-fluid call-to-action-section text-white py-5 mt-5 text-center"
     style="background: linear-gradient(to right, #A0E7E5, #FBE7C6); padding-left: 15%; padding-right: 15%;">
  <h2 style="color: #DAA520; font-weight: bold;"><%= t('home.index.cta.title') %></h2>
  <p class="lead mb-4"><%= t('home.index.cta.subtitle') %></p>
  <%= link_to t('home.index.cta.button'),
              new_user_registration_path,
              class: "btn btn-warning btn-lg px-5 py-3" %>
</div>
