


<div class="row">
  <div class="col-sm-6">
    <h1>Sales</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_sale_path, class: 'btn btn-primary' do %>
    Add New Sale
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Product</th>
            <th>Quantity</th>
            <th>Total price</th>
            <th>User</th>
            <th>Date</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @sales.each do |sale| %>
        <%= content_tag :tr, id: dom_id(sale), class: dom_class(sale) do %>
          

                      <td><%= sale.product.name %></td>
                      <td><%= sale.quantity %></td>
                      <td><%= number_to_currency(sale.total_price, unit: "RWF ", precision: 0) %></td>
                      <td><%= sale.user.name %></td>
                      <td><%= sale.date %></td>
          
          
            <td><%= link_to 'Show', sale %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
