<div class="row">
  <div class="col-sm-6">
    <h1><%= t('incomes.index.title') %></h1>
  </div>

  <div class="col-sm-6 text-end">
    <%= link_to t('incomes.index.add_new'), new_income_path, class: 'btn btn-primary' %>
  </div>
</div>

<div class="table-responsive mt-3">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t('incomes.index.columns.name') %></th>
        <th><%= t('incomes.index.columns.amount') %></th>
        <th><%= t('incomes.index.columns.category') %></th>
        <th><%= t('incomes.index.columns.date') %></th>
        <th><%= t('incomes.index.columns.user') %></th>
      </tr>
    </thead>

    <tbody>
      <% @incomes.each do |income| %>
        <%= content_tag :tr, id: dom_id(income), class: dom_class(income) do %>
          <td><%= link_to income.name, income %></td>
          <td><%= number_to_currency(income.amount, unit: t('currency.unit'), precision: 0) %></td>
          <td><%= income.category %></td>
          <td><%= l(income.date, format: :ymd) %></td>
          <td><%= income.user&.name %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
