<%= form_with(model: income) do |form| %>
  <% if income.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= t('errors.template.header',
              count: income.errors.count,
              model: t('activerecord.models.income')) %>
        <%= t('errors.template.prohibited',
              model: t('activerecord.models.income')) %>
      </h2>

      <ul>
        <% income.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, t('activerecord.attributes.income.name'), class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control',
          placeholder: t('incomes.form.placeholders.name', default: 'e.g., Service payment') %>
  </div>

  <div class="mb-3">
    <%= form.label :amount, t('activerecord.attributes.income.amount'), class: 'form-label' %>
    <%= form.text_field :amount, class: 'form-control',
          placeholder: t('incomes.form.placeholders.amount', default: 'e.g., 150000') %>
  </div>

  <div class="mb-3">
    <%= form.label :category, t('activerecord.attributes.income.category'), class: 'form-label' %>
    <%= form.text_field :category, class: 'form-control',
          placeholder: t('incomes.form.placeholders.category', default: 'e.g., Consulting') %>
  </div>

  <%# DATE FIELD REMOVED â€” recorded from created_at or inherited from sale %>

  <div class="mb-3">
    <% if income.persisted? %>
      <div class="float-end">
        <%= link_to t('shared.buttons.destroy'), income, method: :delete,
              class: "text-danger",
              data: { confirm: t('shared.confirmations.destroy') } %>
      </div>
    <% end %>

    <%= form.submit(
          income.persisted? ? t('shared.buttons.update') : t('shared.buttons.save'),
          class: 'btn btn-primary'
        ) %>

    <% if income.persisted? %>
      <%= link_to t('shared.buttons.cancel'), income, class: "btn btn-link" %>
    <% else %>
      <%= link_to t('shared.buttons.cancel'), incomes_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
