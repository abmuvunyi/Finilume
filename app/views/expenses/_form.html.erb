<%= form_with(model: expense) do |f| %>
  <%= render "devise/shared/error_messages", resource: expense %>

  <div class="mb-3">
    <%= f.label :name, t('activerecord.attributes.expense.name'), class: "form-label" %>
    <%= f.text_field :name, class: "form-control",
          placeholder: t('expenses.form.placeholders.name') %>
  </div>

  <div class="mb-3">
    <%= f.label :amount, t('activerecord.attributes.expense.amount'), class: "form-label" %>
    <%= f.number_field :amount, step: "0.01", class: "form-control",
          placeholder: t('expenses.form.placeholders.amount') %>
  </div>

  <div class="mb-3">
    <%= f.label :category, t('activerecord.attributes.expense.category'), class: "form-label" %>
    <%= f.text_field :category, class: "form-control",
          placeholder: t('expenses.form.placeholders.category') %>
  </div>

  <div class="mb-3">
    <%= f.label :date, t('activerecord.attributes.expense.date'), class: "form-label" %>
    <%= f.date_field :date, class: "form-control" %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit (expense.persisted? ? t('shared.buttons.update') : t('shared.buttons.save')),
                 class: "btn btn-primary" %>
    <%= link_to t('shared.buttons.back'), expenses_path, class: "btn btn-link" %>
  </div>
<% end %>
