<%= form_with(model: expense) do |form| %>
  <% if expense.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= t('errors.template.header',
              count: expense.errors.count,
              model: t('activerecord.models.expense', default: 'expense')) %>
        <%= t('errors.template.prohibited',
              model: t('activerecord.models.expense', default: 'expense')) %>
      </h2>

      <ul>
        <% expense.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, t('products.fields.name', default: 'Name'), class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control',
          placeholder: t('expenses.form.placeholders.name', default: 'e.g., Office rent') %>
  </div>

  <div class="mb-3">
    <%= form.label :amount, t('expenses.index.columns.amount', default: 'Amount'), class: 'form-label' %>
    <%= form.text_field :amount, class: 'form-control',
          placeholder: t('expenses.form.placeholders.amount', default: 'e.g., 50000') %>
  </div>

  <div class="mb-3">
    <%= form.label :category, t('products.fields.category', default: 'Category'), class: 'form-label' %>
    <%= form.text_field :category, class: 'form-control',
          placeholder: t('expenses.form.placeholders.category', default: 'e.g., Utilities') %>
  </div>

  <%# DATE FIELD REMOVED â€” recorded from created_at or inherited from product purchase %>

  <div class="mb-3">
    <% if expense.persisted? %>
      <div class="float-end">
        <%= link_to t('shared.buttons.destroy', default: 'Destroy'), expense, method: :delete,
              class: "text-danger",
              data: { confirm: t('shared.confirmations.destroy', default: 'Are you sure?') } %>
      </div>
    <% end %>

    <%= form.submit(
          expense.persisted? ? t('shared.buttons.update', default: 'Update')
                             : t('shared.buttons.save', default: 'Save'),
          class: 'btn btn-primary'
        ) %>

    <% if expense.persisted? %>
      <%= link_to t('shared.buttons.cancel', default: 'Cancel'), expense, class: "btn btn-link" %>
    <% else %>
      <%= link_to t('shared.buttons.cancel', default: 'Cancel'), expenses_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
