<%= form_with(model: expense) do |form| %>
  <% if expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
      <% expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :amount, class: 'form-label' %>
      <%= form.text_field :amount, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :category, class: 'form-label' %>
      <%= form.text_field :category, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :date, class: 'form-label' %>
      <%= form.date_field :date, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :user_id, class: 'form-label' %>
      <%= form.text_field :user_id, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <% if expense.persisted? %>
      <div class="float-end">
        <%= link_to 'Destroy', expense, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if expense.persisted? %>
      <%= link_to "Cancel", expense, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", expenses_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
