


<div class="row">
  <div class="col-sm-6">
    <h1>Expenses</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_expense_path, class: 'btn btn-primary' do %>
    Add New Expense
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Amount</th>
            <th>Category</th>
            <th>Date</th>
            <th>User</th>
            
      </tr>
    </thead>

    <tbody>
      <% @expenses.each do |expense| %>
        <%= content_tag :tr, id: dom_id(expense), class: dom_class(expense) do %>
          
            <td><%= link_to expense.name, expense %></td>
          

                      <td><%= expense.amount %></td>
                      <td><%= expense.category %></td>
                      <td><%= expense.date %></td>
                      <td><%= expense.user.name %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
